<?xml version="1.0" encoding="UTF-8"?><definitions xmlns="http://ws.apache.org/ns/synapse">
    <proxy name="REST_URL_POSTFIX_TestProxy" transports="https http" startOnLoad="true" trace="disable">
        <description/>
        <target>
            <inSequence>
                <log>
                    <property name="rest-url-value" expression="get-property('axis2','REST_URL_POSTFIX')"/>
                </log>
                <property name="REST_URL_POSTFIX" value="/echoString?in=charitha" scope="axis2"/>
                <send>
                    <endpoint>
                        <address uri="http://localhost:8280/services/echo"/>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
    </proxy>
</definitions>
