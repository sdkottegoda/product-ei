<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="FooProxy"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <log/>
            <property name="CHARACTER_SET_ENCODING"
                      value="ISO-8859-2"
                      scope="axis2"
                      type="STRING"/>
            <send>
                <endpoint>
                    <address uri="http://localhost:8480/services/echoProxy"/>
                </endpoint>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
    </target>
    <description/>
</proxy>